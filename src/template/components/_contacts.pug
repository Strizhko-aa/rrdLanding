mixin contacts()
    section.contacts.js-section#contacts
        .container
            .contacts-form
                h2 По любым вопросам, обращайтесь
                form.js-forms#hasQuestion(novalidate)
                    .contacts-field
                        label(for="name") Имя
                        input(id="name" type="text" class="js-validate js-input" name="name" autocomplete="off")
                        span.validate-message
                    .contacts-field
                        label(for="messege-email") Email
                        input(id="messege-email" type="email" class="js-validate js-input" name="email" autocomplete="off")
                        span.validate-message
                    .contacts-field.contacts-field--textarea
                        label(for="messege") Сообщение
                        textarea(id="messege" type="text" class="js-input js-validate" name="messege" autocomplete="off")
                        span.validate-message
                    .contacts-field
                        button(type="submit") Отправить
            .contacts-image
                img(src="./static/img/contacts.png", alt="Contacts image")
